# Session secret (required in production)
SESSION_SECRET=your-secret-key-here

# Port (automatically set by Render)
PORT=3000

# Database URL (automatically set by Render when using PostgreSQL)
# For local development with SQLite, leave this empty
DATABASE_URL=

# Node environment
NODE_ENV=development

# Email configuration (optional - uses test account if not set)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
MAIL_FROM="Fantasy Scottish League <no-reply@fantasy.scot>"
